# E14Z MCP Registry - Vercel Production Environment
# This file contains environment variables specific to Vercel deployment
# Add these variables to your Vercel project settings

# === VERCEL-SPECIFIC CONFIGURATION ===
# Vercel Analytics & Speed Insights
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=${VERCEL_ANALYTICS_ID}
VERCEL_URL=${VERCEL_URL}
VERCEL_REGION=${VERCEL_REGION}

# === DATABASE CONFIGURATION ===
# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Connection Pool Optimization for Vercel
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=10000
DATABASE_IDLE_TIMEOUT=5000

# === SECURITY CONFIGURATION ===
# JWT Security - Generate with: openssl rand -base64 64
JWT_SECRET_KEY=
JWT_REFRESH_SECRET=
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ALGORITHM=HS256

# Encryption Keys - Generate with: openssl rand -hex 64
ENCRYPTION_KEY=
IDOR_ENCRYPTION_KEY=

# Session Security
SESSION_SECRET=
COOKIE_SECRET=
CSRF_SECRET=

# === RATE LIMITING & CACHING ===
# Upstash Redis (Recommended for Vercel)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
KV_REST_API_URL=${UPSTASH_REDIS_REST_URL}
KV_REST_API_TOKEN=${UPSTASH_REDIS_REST_TOKEN}

# Rate limiting optimized for serverless
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# === AI PROVIDERS ===
# At least one AI provider required for tag generation
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# === EXTERNAL APIS ===
GITHUB_TOKEN=
FIRECRAWL_API_KEY=

# === MONITORING & OBSERVABILITY ===
# Vercel-compatible monitoring
OTEL_SERVICE_NAME=e14z-production
OTEL_SERVICE_VERSION=4.1.1
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=

# Third-party monitoring (DataDog, New Relic, etc.)
DATADOG_API_KEY=
DATADOG_APP_KEY=
NEW_RELIC_LICENSE_KEY=
SENTRY_DSN=

# Logging optimized for Vercel
LOG_LEVEL=warn
PINO_LOG_LEVEL=warn
LOG_PRETTY=false

# === SECURITY MONITORING ===
# Slack/Discord webhooks for alerts
SECURITY_ALERT_WEBHOOK=
SECURITY_EMAIL_ALERTS=

# Intrusion detection
IDS_ENABLED=true
IDS_SENSITIVITY=medium
THREAT_DETECTION_ENABLED=true

# === APPLICATION CONFIGURATION ===
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://e14z.com
NEXT_PUBLIC_API_URL=https://e14z.com/api

# CORS for production
ALLOWED_ORIGINS=https://e14z.com,https://www.e14z.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security headers
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=strict
X_FRAME_OPTIONS=DENY
REFERRER_POLICY=strict-origin-when-cross-origin

# === FEATURE FLAGS ===
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RBAC=true
ENABLE_IDOR_PROTECTION=true
ENABLE_XSS_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_ID=true

# === SMTP CONFIGURATION ===
# Use external SMTP service (SendGrid, Mailgun, etc.)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM_NAME=E14Z Security System

# === BACKUP & STORAGE ===
# S3-compatible storage for backups
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# === VERCEL EDGE CONFIG ===
# For feature flags and dynamic configuration
EDGE_CONFIG=
EDGE_CONFIG_TOKEN=